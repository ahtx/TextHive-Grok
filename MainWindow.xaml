<Window x:Class="TextHiveGrok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TextOrganizer by Amir Husain"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        KeyDown="HandleWindowKeyDown"
        Height="700"
        Width="1200"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New"
                          Click="HandleCreateNewFile" />
                <MenuItem Header="Create Today's Note File"
                          Click="HandleCreateTodaysNote" />
                <MenuItem Header="Save"
                          Click="HandleSaveFile"
                          InputGestureText="Ctrl+S" />
                <MenuItem Header="Exit"
                          Click="HandleExit" />
            </MenuItem>
            <MenuItem Header="Configure"
                      Click="HandleConfigure" />
            <MenuItem Header="About"
                      Click="ShowAbout" />
        </Menu>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock  Text="{Binding StatusText}" />
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <DockPanel Grid.Column="0"
                       Margin="5">
                <StackPanel DockPanel.Dock="Top"
                            Orientation="Horizontal"
                            Margin="0,0,0,5">

                    <TextBox x:Name="searchBox"
                             Width="300"
                             Style="{StaticResource TextBoxExtend}"
                             Text="{Binding Path=SearchText, Mode=TwoWay}"
                             Height="30"
                             Margin="0,0,10,0"
                             KeyDown="SearchBox_KeyDown" />
                    <Button Style="{StaticResource ButtonPrimary}"
                            x:Name="searchButton"
                            Height="30"
                            Content="🔍 Search"
                            Width="100"
                            Margin="0,0,10,0"
                            Click="SearchButton_Click" />
                    <Button Style="{StaticResource ButtonDanger}"
                            x:Name="clearButton"
                            Height="30"
                            Content="✖ Clear"
                            Width="100"
                            Margin="0,0,10,0"
                            Click="ClearButton_Click" />
                </StackPanel>

                <DataGrid x:Name="fileList"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding Files}"
                          SelectionChanged="fileList_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="250"
                                            Binding="{Binding FileName}"
                                            Header="File"
                                            IsReadOnly="True" />
                        <DataGridTextColumn Width="100"
                                            Binding="{Binding Size}"
                                            Header="Size"
                                            IsReadOnly="True" />
                        <DataGridTextColumn Width="150"
                                            Binding="{Binding Modified}"
                                            Header="Date Modified"
                                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>

            </DockPanel>

            <GridSplitter Grid.Column="1"
                          Grid.RowSpan="3"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="Gray"
                          ShowsPreview="true"
                          Margin="2,5"
                          Width="5" />

            <!-- Right Panel -->
            <DockPanel Grid.Column="2"
                       Margin="5"
                       LastChildFill="True">

                <TextBlock x:Name="currentFileLabel"
                           DockPanel.Dock="Top"
                           Text="{Binding CurrentFilePath}"
                           Height="25"
                           Margin="0,0,0,5" />

                <DataGrid x:Name="relatedFilesView"
                          DockPanel.Dock="Bottom"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding RelatedFiles}"
                          SelectionChanged="relatedFilesView_SelectionChanged"
                          Height="250"
                          Margin="0,5,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="250"
                                            Binding="{Binding FileName}"
                                            Header="File"
                                            IsReadOnly="True" />
                        <DataGridTextColumn Width="100"
                                            Binding="{Binding RelatedWords}"
                                            Header="Related Words"
                                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Preview Box -->
                <TextBox x:Name="previewBox"
                         Text="{Binding PreviewText}"
                         TextChanged="PreviewBox_TextChanged"
                         VerticalContentAlignment="Top"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         AcceptsReturn="True"
                         BorderThickness="1"
                         BorderBrush="Gray" />

            </DockPanel>

        </Grid>
    </DockPanel>
</Window>